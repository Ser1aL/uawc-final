source 'http://rubygems.org'

# app framework and support
gem 'sinatra'
gem 'sinatra-contrib'

# front-end framework and support
gem 'bootstrap-sass'
gem 'compass'
gem 'uglifier'

# view renderer
gem 'haml'

# file reference storage
gem 'redis'

# read / write mp3 tags
gem 'ruby-mp3info'

# draw waveforms
gem 'rmagick'

# ruby wrapper around libsndfile
source 'http://gemcutter.org' do
  gem 'ruby-audio'
end

# application runner and faster server
gem 'puma'

# mailer
gem 'mail'

# debugging
gem 'pry'

# testing
gem 'minitest'
